# Production Environment Configuration for Greenix Server on Render.com

# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration (MongoDB Atlas - Replace with your connection string)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/pavithratraders?retryWrites=true&w=majority
DB_NAME=pavithratraders

# JWT Configuration (Generate a strong secret for production)
JWT_SECRET=your_super_secure_jwt_secret_for_production_2025_greenix_platform
JWT_EXPIRES_IN=24h

# Admin Configuration
ADMIN_EMAIL=admin@pavithratraders.com
ADMIN_PASSWORD=SecureAdminPassword123!
DEFAULT_ADMIN_NAME=Administrator

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp
UPLOAD_PATH=./uploads

# Razorpay Configuration (Replace with your actual keys)
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# CORS Configuration (Add your frontend domain)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://greenix-frontend.onrender.com

# Security
BCRYPT_ROUNDS=12

# API Configuration (Replace with your actual Render URLs)
API_BASE_URL=https://greenix-backend.onrender.com
CLIENT_BASE_URL=https://your-frontend-domain.com

# Production Settings
DEBUG=false
ENABLE_LOGGING=true

# WhatsApp Integration (if applicable)
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=your_whatsapp_business_number